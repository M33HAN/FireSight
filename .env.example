# FireSight Environment Configuration
# Copy to .env and update values

# Application
APP_NAME=FireSight
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://firesight:firesight@localhost:5432/firesight

# Redis
REDIS_URL=redis://localhost:6379/0

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=firesight
MINIO_SECURE=false

# YOLO Models
YOLO_GENERAL_MODEL=yolov8m.pt
YOLO_FIRE_SMOKE_MODEL=models/fire_smoke.pt
YOLO_PPE_MODEL=models/ppe.pt
YOLO_PLANT_MODEL=models/plant.pt
YOLO_PLATE_MODEL=models/plate_detect.pt

# Detection Defaults
DEFAULT_CONFIDENCE=0.5
DEFAULT_IOU_THRESHOLD=0.45
MAX_DETECTIONS_PER_FRAME=100

# Email Alerts
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=alerts@firesight.ai

# Integrations
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=
PAGERDUTY_API_KEY=

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Storage Paths
CLIP_STORAGE_PATH=./storage/clips
THUMBNAIL_STORAGE_PATH=./storage/thumbnails
HEATMAP_STORAGE_PATH=./storage/heatmaps
REPORT_STORAGE_PATH=./storage/reports

# Share Settings
SHARE_BASE_URL=http://localhost:3000/shared
SHARE_DEFAULT_EXPIRY_DAYS=7
